{
    "argocd":
    {
        "enabled": true,
        "namespace": "argocd",
        "basedir": "~/.pfo/k8s/argocd",
        "github_ssh_pub": "~/.pfo/argocd/argocd_github.pub",
        "github_ssh_priv": "~/.pfo/argocd/argocd_github",
        "tls_cert": "~/.pfo/argocd/argocd-ssl-tls.crt",
        "tls_key": "~/.pfo/argocd/argocd-ssl-tls.key",
        "secret_manifests": ["~/.pfo/k8s/local/overlays/argocd/argocd-ssl-certs.yaml", "~/.pfo/k8s/local/overlays/argocd/argocd-ssh-secret.yaml"]
    },
    "gpg":
    {
        "enabled": true,
        "public_key": "~/.pfo/keys/pfo.pub",
        "private_key": "~/.pfo/keys/pfo"
    },
    "traefik":
    {
        "enabled": true,
        "namespace": "traefik",
        "values_file": "~/.pfo/k8s/local/overlays/traefik/traefik-values.yaml"
    }
}
